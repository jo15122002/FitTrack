<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Ajouter une activité - Mon Application Fitness</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
<header class="bg-primary text-white text-center py-3">
    <h1>Ajouter une activité</h1>
</header>

<main class="container my-4">
    <form method="post" action="{{ path('app_activity_add') }}" class="needs-validation" novalidate>
        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.type, 'Type d\'activité', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.type) }}
        </div>

        <div class="form-group">
            {{ form_label(form.distance, 'Distance (en kilomètres)', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.distance, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.distance) }}
        </div>

        <div class="form-group">
            {{ form_label(form.duration, 'Durée (en minutes)', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.duration, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.duration) }}
        </div>

        <div class="form-group">
            {{ form_label(form.date, 'Date et heure de l\'activité', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.date) }}
        </div>
        {{ form_end(form) }}
    </form>
</main>
<footer class="bg-dark text-white text-center py-3">
    <p>&copy; {{ "now"|date("Y") }} Mon Application Fitness</p>
</footer>
</body>
</html>
