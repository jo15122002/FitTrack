{% extends 'base.html.twig' %}

{% block title %}Liste des Objectifs{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Mes Objectifs</h1>

        <a href="{{ path('app_goal_add') }}" class="btn btn-success mb-3">Ajouter un nouvel objectif</a>

        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th>Description</th>
                <th>Échéance</th>
                <th>Statut</th>
                <th>Plans d'Entraînement Associés</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for goal in goals %}
                <tr>
                    <td>{{ goal.description }}</td>
                    <td>{{ goal.deadline|date('Y-m-d') }}</td>
                    <td>{{ goal.status }}</td>
                    <td>
                        {% for plan in goal.workoutPlans %}
                            <span>{{ plan.description }}</span>{% if not loop.last %}, {% endif %}
                        {% else %}
                            Aucun plan associé
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('app_goal_add_workout_plan', {'id': goal.id}) }}" class="btn btn-sm btn-outline-secondary">Ajouter un Plan</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun objectif trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
