{% extends 'base.html.twig' %}

{% block title %}Détails de l'Objectif{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Détails de l'Objectif</h1>

        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">{{ goal.description }}</h5>
                <p class="card-text">
                    <strong>Échéance:</strong> {{ goal.deadline|date('Y-m-d') }}<br>
                    <strong>Statut:</strong> {{ goal.status }}
                </p>
                {# Si vous avez des informations supplémentaires à afficher, ajoutez-les ici #}
            </div>
        </div>

        {# Si vous avez associé des WorkoutPlans à vos Goals, affichez-les ici #}
        <h3>Plans d'Entraînement Associés</h3>
        <ul>
            {% for workoutPlan in goal.workoutPlans %}
                <li>{{ workoutPlan.description }}</li>
            {% else %}
                <li>Aucun plan d'entraînement associé</li>
            {% endfor %}
        </ul>

        {# Liens pour l'édition et le retour à la liste #}
        <a href="{{ path('app_goal_edit', {'id': goal.id}) }}" class="btn btn-warning">Éditer</a>
        <a href="{{ path('app_goal_list') }}" class="btn btn-primary">Retour à la liste des objectifs</a>
    </div>
{% endblock %}
