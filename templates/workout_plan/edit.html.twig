{% extends 'base.html.twig' %}

{% block title %}Éditer le Plan d'Entraînement{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Éditer le Plan d'Entraînement</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

        <div class="mb-3">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.activities) }}
            <div class="border p-2">
                {% for activity in form.activities %}
                    <div class="form-check mb-2">
                        {{ form_widget(activity, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(activity, null, {'attr': {'class': 'form-check-label'}}) }}
                    </div>
                {% endfor %}
            </div>
            {{ form_errors(form.activities) }}
        </div>

        <div class="mt-3">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
